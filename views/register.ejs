<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - Cybersecurity Awareness</title>
    <link rel="stylesheet" href="/main.css">
</head>

<body id="register-page"> <!-- Unique ID for register page -->

  <nav>
    <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/modules">Modules</a></li>
        <li><a href="/quiz">Quiz</a></li>
        <li><a href="/contact">Contact</a></li>
        <li><a href="/users/login">Login</a></li>
    </ul>
  </nav>

  <div class="register-container"> <!-- Unique container class -->
    <div class="register-form-container"> <!-- Unique form wrapper -->
        <h2>Register</h2>
        <form action="/users/registered" id="register-form" method="POST">
            <input type="text" name="username" id="register-username" class="register-input" placeholder="Enter Username" required>
            <input type="email" name="email" id="register-email" class="register-input" placeholder="Enter Email" required>
            <input type="password" name="password" id="register-password" class="register-input" placeholder="Enter Password" required>
            <button type="submit" class="register-button">Register</button>
        </form>
        <p class="login-link">Already have an account? <a href="/users/login">Login here</a></p>
    </div>
  </div>
  <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
    <ul class="error-messages">
      <% errors.forEach(function(error) { %>
        <li><%= error.msg %></li>
      <% }); %>
    </ul>
  <% } %>
</body>
</html>
